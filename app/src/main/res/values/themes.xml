<resources xmlns:tools="http://schemas.android.com/tools">
    <style
        name="AppTheme"
        parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/theme_1_md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/theme_1_md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/theme_1_md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/theme_1_md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/theme_1_md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/theme_1_md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/theme_1_md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/theme_1_md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/theme_1_md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/theme_1_md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/theme_1_md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/theme_1_md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/theme_1_md_theme_light_error</item>
        <item name="colorErrorContainer">@color/theme_1_md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/theme_1_md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/theme_1_md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/theme_1_md_theme_light_background</item>
        <item name="colorOnBackground">@color/theme_1_md_theme_light_onBackground</item>
        <item name="colorSurface">@color/theme_1_md_theme_light_surface</item>
        <item name="colorOnSurface">@color/theme_1_md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/theme_1_md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/theme_1_md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/theme_1_md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/theme_1_md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/theme_1_md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/theme_1_md_theme_light_inversePrimary</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/theme_1_md_theme_light_surface</item>
        <item
            name="android:forceDarkAllowed"
            tools:targetApi="q">false</item>

        <item name="android:windowSplashScreenBackground">@color/theme_1_md_theme_light_surface</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/theme_1_md_theme_light_surface</item>
        <item name="android:windowSplashScreenBehavior">icon_preferred</item>
    </style>

    <style
        name="Widget.App.Button.OutlinedButton.IconOnly"
        parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>
