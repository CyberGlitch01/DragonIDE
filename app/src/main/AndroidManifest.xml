<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        android:minSdkVersion="30"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppStaticTheme"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules">
        <activity
            android:name="com.dragon.ide.ui.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dragon.ide.ui.activities.FileManagerActivity"
            android:exported="true"/>
        <activity
            android:name="com.dragon.ide.ui.activities.BlocksHolderManagerActivity"
            android:exported="true"/>
        <activity
            android:name="com.dragon.ide.ui.activities.BlockManagerActivity"
            android:exported="true"/>
        <activity
            android:name="com.dragon.ide.ui.activities.BlockEditorActivity"
            android:exported="true"/>
        <activity
            android:name="com.dragon.ide.ui.activities.EventListActivity"
            android:exported="true"/>
        <activity
            android:configChanges="uiMode"
            android:windowSoftInputMode="adjustResize"
            android:name="com.dragon.ide.ui.activities.EventEditorActivity"
            android:exported="true"/>
        <activity
            android:name="com.dragon.ide.ui.activities.DebugActivity"
            android:exported="true"/>
        <activity
            android:name="com.dragon.ide.ui.activities.WebViewActivity"
            android:exported="true"/>
    </application>
</manifest>
